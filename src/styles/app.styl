@import url('normalize.css');

body, html {
  height: 100%;
  min-height: 100%;
  background-color: #555;
  font-family: "Lucida Console", Monaco, monospace;
}

.big {
  font-size: 30px;
  color: #ffa500;
  padding: 0;
  margin: 0;
}

.small {
  font-size: 24px;
}

.tiny {
  font-size: 12px;
}

.hidden {
  display: none;
}

a {
  color: #33ccff;
  text-decoration: none;
  text-shadow: 0 2px 5px #000;

  &:hover {
    color: #b1e31b;
    text-decoration: underline;
  }

  &:visited {
    color: #33ccff;
    text-decoration: none;
    text-shadow: 0 2px 5px #000;
  }
}

.grid-container {
  width: 516px;
  margin: 20px auto 0 auto;
  box-shadow: 0 0 30px rgba(0,0,0,.75);

  .grid {
    width: 516px;
    height: 516px;
    background-image: url('../img/grid.png');
    position: relative;
    z-index: 10;
  }

  .grid-shape {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 14;
  }

  .grid-shape-gem {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 20;
    width: 128px;
    height: 128px;
  }

  .grid-shape-gem-spark {
    position: absolute;
    z-index: 25;
    width: 128px;
    height: 128px;
    background-repeat: no-repeat;
    background-position: center;
  }

  .controls {
    width: 516px;
    height: 100px;
    border-top: 1px solid #333;
    user-select: none;
    -webkit-user-select: none;
    background-color: #000;

    ul {
      padding: 0;
      margin: 0;
      color: #aaa;
      list-style: none;

      li {
        width: 50px;
        height: 50px;
        display: inline-block;
        padding: 0;
        margin: 10px;
        cursor: pointer;
      }
    }

    .mini-triangle {
      background-image: url('../img/shape_triangle_mini.png');
    }

    .mini-square {
      background: url('../img/shape_square_mini.png') bottom no-repeat;
    }

    .mini-square2x {
      background-image: url('../img/shape_square2x_mini.png');
    }

    .mini-rectangle {
      background: url('../img/shape_rectangle_mini.png') bottom no-repeat;
    }

    .mini-outrider {
      height: 75px;
      background-image: url('../img/shape_outrider_mini.png');
    }
  }
}

#grid-notifications {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 350px;
  padding: 20px;

  .alert {
    color: #fff;
    border-left: 4px solid #fff;
    border-radius: 3px;
    background-color: #333;
    margin: 20px 0 0 20px;
    padding: 20px;
    opacity: 0;
    transition: .4s all ease;
    transform: translateX(100%);

    .title {
      font-size: 16px;
      display: block;
      margin-bottom: 10px;
    }

    .msg {
      font-size: 14px;
    }

    &.success {
      opacity: 1;
      border-color: #00cc00;
      transform: translateX(0);

      .title {
        color: #00cc00;
      }
    }

    &.error {
      opacity: 1;
      border-color: #ff0000;
      transform: translateX(0);

      .title {
        color: #ff0000;
      }
    }
  }
}
